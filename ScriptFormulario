/*Formulario de pesquisa*/

CREATE DATABASE FORMULARIO;

USE FORMULARIO;

CREATE TABLE PESSOA (PESSOAID INT PRIMARY KEY AUTO_INCREMENT,
					 NOME VARCHAR (100) NOT NULL, 
					 DEPARTAMENTO VARCHAR (100),
					 CARGO VARCHAR(100));


CREATE TABLE CARACTERISTICASDOMINANTES (CD_ID INT PRIMARY KEY AUTO_INCREMENT,
										CD_A_EXPECT VARCHAR(2),
										CD_A_REAL VARCHAR(2),
										CD_B_EXPECT VARCHAR(2),
										CD_B_REAL VARCHAR(2),
										CD_C_EXPECT VARCHAR(2),
										CD_C_REAL VARCHAR(2),
										CD_D_EXPECT VARCHAR(2),
										CD_D_REAL VARCHAR(2),
										ID_PESSOA INT,
										FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID)
										);
										
CREATE TABLE LIDERANCAORGANIZACIONAL (LO_ID INT PRIMARY KEY AUTO_INCREMENT,
									  LO_A_EXPECT VARCHAR(2),
									  LO_A_REAL VARCHAR(2),
									  LO_B_EXPECT VARCHAR(2),
									  LO_B_REAL VARCHAR(2),
									  LO_C_EXPECT VARCHAR(2),
									  LO_C_REAL VARCHAR(2),
									  LO_D_EXPECT VARCHAR(2),
									  LO_D_REAL VARCHAR(2),
									  ID_PESSOA INT,
									  FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID)
									  );
										
CREATE TABLE GESTAODEFUNCIONARIOS (GF_ID INT PRIMARY KEY AUTO_INCREMENT,
								   GF_A_EXPECT VARCHAR(2),
								   GF_A_REAL VARCHAR(2),
								   GF_B_EXPECT VARCHAR(2),
								   GF_B_REAL VARCHAR(2),
								   GF_C_EXPECT VARCHAR(2),
								   GF_C_REAL VARCHAR(2),
								   GF_D_EXPECT VARCHAR(2),
								   GF_D_REAL VARCHAR(2),
								   ID_PESSOA INT,
								   FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID));

CREATE TABLE COLAGEMDEORGANIZACAO (CO_ID INT PRIMARY KEY AUTO_INCREMENT,
								   CO_A_EXPECT VARCHAR(2),
								   CO_A_REAL VARCHAR(2),
								   CO_B_EXPECT VARCHAR(2),
								   CO_B_REAL VARCHAR(2),
								   CO_C_EXPECT VARCHAR(2),
								   CO_C_REAL VARCHAR(2),
								   CO_D_EXPECT VARCHAR(2),
								   CO_D_REAL VARCHAR(2),
								   ID_PESSOA INT,
								   FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID));

CREATE TABLE ENFASEESTRATEGICA (EE_ID INT PRIMARY KEY AUTO_INCREMENT,
							    EE_A_EXPECT VARCHAR(2),
								EE_A_REAL VARCHAR(2),
								EE_B_EXPECT VARCHAR(2),
								EE_B_REAL VARCHAR(2),
								EE_C_EXPECT VARCHAR(2),
								EE_C_REAL VARCHAR(2),
								EE_D_EXPECT VARCHAR(2),
								EE_D_REAL VARCHAR(2),
								ID_PESSOA INT,
								FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID));
								   
CREATE TABLE CRITERIOSDESUCESSO (CS_ID INT PRIMARY KEY AUTO_INCREMENT,
								 CS_A_EXPECT VARCHAR(2),
								 CS_A_REAL VARCHAR(2),
								 CS_B_EXPECT VARCHAR(2),
								 CS_B_REAL VARCHAR(2),
								 CS_C_EXPECT VARCHAR(2),
								 CS_C_REAL VARCHAR(2),
								 CS_D_EXPECT VARCHAR(2),
								 CS_D_REAL VARCHAR(2),
								 ID_PESSOA INT,
								 FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID));
										
/*Consulta que ser√° utilizada para retornar dados para Teyde*/
SELECT *  PESSOA
INNER JOIN CARACTERISTICASDOMINANTES
ON PESSOA.PESSOAID = CARACTERISTICASDOMINANTES.CD_ID
INNER JOIN LIDERANCAORGANIZACIONAL
ON PESSOA.PESSOAID = LIDERANCAORGANIZACIONAL.LO_ID
INNER JOIN GESTAODEFUNCIONARIOS
ON PESSOA.PESSOAID = GESTAODEFUNCIONARIOS.GF_ID
INNER JOIN COLAGEMDEORGANIZACAO
ON PESSOA.PESSOAID = COLAGEMDEORGANIZACAO.CO_ID
INNER JOIN ENFASEESTRATEGICA
ON PESSOA.PESSOAID = ENFASEESTRATEGICA.EE_ID
INNER JOIN CRITERIOSDESUCESSO
ON PESSOA.PESSOAID = CRITERIOSDESUCESSO.CS_ID;

SENHA NOTEBOOK TEYDE = Paifi12345


