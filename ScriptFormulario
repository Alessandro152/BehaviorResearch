/*Formulario de pesquisa*/

CREATE DATABASE FORMULARIO;

USE FORMULARIO;

CREATE TABLE PESSOA (PESSOAID INT PRIMARY KEY AUTO_INCREMENT,
					 NOME VARCHAR (100) NOT NULL, 
					 DEPARTAMENTO VARCHAR (100),
					 CARGO VARCHAR(100));


CREATE TABLE CARACTERISTICASDOMINANTES (CD_ID INT PRIMARY KEY AUTO_INCREMENT,
										CD_A_EXPECT VARCHAR(2),
										CD_A_REAL VARCHAR(2),
										CD_B_EXPECT VARCHAR(2),
										CD_B_REAL VARCHAR(2),
										CD_C_EXPECT VARCHAR(2),
										CD_C_REAL VARCHAR(2),
										CD_D_EXPECT VARCHAR(2),
										CD_D_REAL VARCHAR(2),
										ID_PESSOA INT,
										FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID)
										);
										
CREATE TABLE LIDERANCAORGANIZACIONAL (LO_ID INT PRIMARY KEY AUTO_INCREMENT,
									  LO_A_EXPECT VARCHAR(2),
									  LO_A_REAL VARCHAR(2),
									  LO_B_EXPECT VARCHAR(2),
									  LO_B_REAL VARCHAR(2),
									  LO_C_EXPECT VARCHAR(2),
									  LO_C_REAL VARCHAR(2),
									  LO_D_EXPECT VARCHAR(2),
									  LO_D_REAL VARCHAR(2),
									  ID_PESSOA INT,
									  FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID)
									  );
										
CREATE TABLE GESTAODEFUNCIONARIOS (GF_ID INT PRIMARY KEY AUTO_INCREMENT,
								   GF_A_EXPECT VARCHAR(2),
								   GF_A_REAL VARCHAR(2),
								   GF_B_EXPECT VARCHAR(2),
								   GF_B_REAL VARCHAR(2),
								   GF_C_EXPECT VARCHAR(2),
								   GF_C_REAL VARCHAR(2),
								   GF_D_EXPECT VARCHAR(2),
								   GF_D_REAL VARCHAR(2),
								   ID_PESSOA INT,
								   FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID));

CREATE TABLE COLAGEMDEORGANIZACAO (CO_ID INT PRIMARY KEY AUTO_INCREMENT,
								   CO_A_EXPECT VARCHAR(2),
								   CO_A_REAL VARCHAR(2),
								   CO_B_EXPECT VARCHAR(2),
								   CO_B_REAL VARCHAR(2),
								   CO_C_EXPECT VARCHAR(2),
								   CO_C_REAL VARCHAR(2),
								   CO_D_EXPECT VARCHAR(2),
								   CO_D_REAL VARCHAR(2),
								   ID_PESSOA INT,
								   FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID));

CREATE TABLE ENFASEESTRATEGICA (EE_ID INT PRIMARY KEY AUTO_INCREMENT,
							    EE_A_EXPECT VARCHAR(2),
								EE_A_REAL VARCHAR(2),
								EE_B_EXPECT VARCHAR(2),
								EE_B_REAL VARCHAR(2),
								EE_C_EXPECT VARCHAR(2),
								EE_C_REAL VARCHAR(2),
								EE_D_EXPECT VARCHAR(2),
								EE_D_REAL VARCHAR(2),
								ID_PESSOA INT,
								FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID));
								   
CREATE TABLE CRITERIOSDESUCESSO (CS_ID INT PRIMARY KEY AUTO_INCREMENT,
								 CS_A_EXPECT VARCHAR(2),
								 CS_A_REAL VARCHAR(2),
								 CS_B_EXPECT VARCHAR(2),
								 CS_B_REAL VARCHAR(2),
								 CS_C_EXPECT VARCHAR(2),
								 CS_C_REAL VARCHAR(2),
								 CS_D_EXPECT VARCHAR(2),
								 CS_D_REAL VARCHAR(2),
								 ID_PESSOA INT,
								 FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID));

CREATE TABLE BARRETTVALUES (BV_ID INT PRIMARY KEY AUTO_INCREMENT,
							SENSO_DE_DONO BIT,
							ATINGIR_OBJETIVOS BIT,
							ADAPTABILIDADE BIT,
							EQUILIBRIO BIT,
							SER_O_MELHOR BIT,
							CULPAR BIT, 
							IMAGEM_DA_MARCA BIT,
							BUROCRACIA BIT,
							IMPORTAR_SE BIT,
							CAUTELA BIT,
							CLAREZA BIT,
							COACHING BIT,
							COMPROMETIMENTO BIT,
							ENVOLVIMENTO_COMUNITARIO BIT,
							COMPAIXAO BIT,
							SOLUCAO_DE_CONFLITOS BIT,
							CONFUSAO BIT,
							MELHORIA_CONTINUA BIT,
							APRENDIZAGEM_CONTINUA BIT,
							CONTROLE BIT,
							COOPERACAO BIT,
							REDUCAO_DE_CUSTOS BIT,
							CORAGEM BIT,
							CRIATIVIDADE BIT,
							COLABORACAO_ENTRE_GRUPOS BIT,
							CURIOSIDADE BIT,
							COLABORACAO_COM_O_CLIENTE BIT,
							SATISFACAO_DO_CLIENTE BIT,
							CONFORTO_COM_INCERTEZAS BIT,
							EFICIENCIA BIT,
							VALORIZANDO_A_DIVERSIDADE BIT,
							EXPANDIR_PODER BIT,
							ENGAJAMENTO_DOS_FUNCIONARIOS BIT,
							REALIZACAO_DO_FUNCIONARIO BIT,
							SAUDE_DO_FUNCIONARIO BIT,
							RECONHECIMENTO_DOS_FUNCIONARIOS BIT,
							EMPODERAR BIT,
							ENCORAJAMENTO BIT,
							ENTUSIASMO BIT,
							EMPREENDEDORISMO BIT,
							CONSCIENCIA_AMBIENTAL BIT,
							IGUALDADE BIT,
							EXCELENCIA BIT,
							EXPERIENCIA BIT,
							EXPLORACAO BIT,
							IMPARCIALIDADE BIT,
							ESTABILIDADE_FINANCEIRA BIT,
							PERDAO BIT,
							PREOCUPACAO_COM_FUTURAS_GERACOES BIT,
							LIDERANCA_GLOBAL BIT,
							ORIENTADO_PARA_OBJETIVOS BIT,
							HIERARQUIA BIT,
							PENSAMENTO_HOLISTICO BIT,
							HONESTIDADE BIT,
							DIREITOS_HUMANOS BIT,
							HUMOR_ALEGRIA BIT,
							CAPACIDADE_DE_INCLUSAO BIT,
							RETER_INFORMACOES BIT,
							COMPARTILHAR_INFORMACOES BIT,
							INICIATIVA BIT,
							INOVACAO BIT,
							INTEGRIDADE BIT,
							COMPETICAO_INTERNA BIT,
							INSEGURANCA_DO_EMPREGO BIT,
							DESENVOLVIMENTO_DA_LIDERANCA BIT,
							LIDERANDO_PELO_EXEMPLO BIT,
							ESCUTAR BIT,
							TRABALHO_EXCESSIVO BIT,
							PERSPECTIVA_DE_LONGO_PRAZO BIT,
							FAZER_A_DIFERENCA BIT,
							MANIPULACAO BIT,
							FOCO_NA_MISSAO BIT,
							COMUNICACAO_ABERTA BIT,
							ABERTURA BIT,
							ID_PESSOA INT,
							FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID));
									




