/*Formulario de pesquisa*/

CREATE DATABASE FORMULARIO;

USE FORMULARIO;

CREATE TABLE PESSOA (PESSOAID INT PRIMARY KEY AUTO_INCREMENT,
					 NOME VARCHAR (100) NOT NULL, 
					 DEPARTAMENTO VARCHAR (100),
					 CARGO VARCHAR(100));


CREATE TABLE CARACTERISTICASDOMINANTES (CD_ID INT PRIMARY KEY AUTO_INCREMENT,
										CD_A_EXPECT VARCHAR(2),
										CD_A_REAL VARCHAR(2),
										CD_B_EXPECT VARCHAR(2),
										CD_B_REAL VARCHAR(2),
										CD_C_EXPECT VARCHAR(2),
										CD_C_REAL VARCHAR(2),
										CD_D_EXPECT VARCHAR(2),
										CD_D_REAL VARCHAR(2),
										ID_PESSOA INT,
										FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID)
										);
										
CREATE TABLE LIDERANCAORGANIZACIONAL (LO_ID INT PRIMARY KEY AUTO_INCREMENT,
									  LO_A_EXPECT VARCHAR(2),
									  LO_A_REAL VARCHAR(2),
									  LO_B_EXPECT VARCHAR(2),
									  LO_B_REAL VARCHAR(2),
									  LO_C_EXPECT VARCHAR(2),
									  LO_C_REAL VARCHAR(2),
									  LO_D_EXPECT VARCHAR(2),
									  LO_D_REAL VARCHAR(2),
									  ID_PESSOA INT,
									  FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID)
									  );
										
CREATE TABLE GESTAODEFUNCIONARIOS (GF_ID INT PRIMARY KEY AUTO_INCREMENT,
								   GF_A_EXPECT VARCHAR(2),
								   GF_A_REAL VARCHAR(2),
								   GF_B_EXPECT VARCHAR(2),
								   GF_B_REAL VARCHAR(2),
								   GF_C_EXPECT VARCHAR(2),
								   GF_C_REAL VARCHAR(2),
								   GF_D_EXPECT VARCHAR(2),
								   GF_D_REAL VARCHAR(2),
								   ID_PESSOA INT,
								   FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID));

CREATE TABLE COLAGEMDEORGANIZACAO (CO_ID INT PRIMARY KEY AUTO_INCREMENT,
								   CO_A_EXPECT VARCHAR(2),
								   CO_A_REAL VARCHAR(2),
								   CO_B_EXPECT VARCHAR(2),
								   CO_B_REAL VARCHAR(2),
								   CO_C_EXPECT VARCHAR(2),
								   CO_C_REAL VARCHAR(2),
								   CO_D_EXPECT VARCHAR(2),
								   CO_D_REAL VARCHAR(2),
								   ID_PESSOA INT,
								   FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID));

CREATE TABLE ENFASEESTRATEGICA (EE_ID INT PRIMARY KEY AUTO_INCREMENT,
							    EE_A_EXPECT VARCHAR(2),
								EE_A_REAL VARCHAR(2),
								EE_B_EXPECT VARCHAR(2),
								EE_B_REAL VARCHAR(2),
								EE_C_EXPECT VARCHAR(2),
								EE_C_REAL VARCHAR(2),
								EE_D_EXPECT VARCHAR(2),
								EE_D_REAL VARCHAR(2),
								ID_PESSOA INT,
								FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID));
								   
CREATE TABLE CRITERIOSDESUCESSO (CS_ID INT PRIMARY KEY AUTO_INCREMENT,
								 CS_A_EXPECT VARCHAR(2),
								 CS_A_REAL VARCHAR(2),
								 CS_B_EXPECT VARCHAR(2),
								 CS_B_REAL VARCHAR(2),
								 CS_C_EXPECT VARCHAR(2),
								 CS_C_REAL VARCHAR(2),
								 CS_D_EXPECT VARCHAR(2),
								 CS_D_REAL VARCHAR(2),
								 ID_PESSOA INT,
								 FOREIGN KEY (ID_PESSOA) REFERENCES PESSOA (PESSOAID));
										
									

SELECT PESSOA.DEPARTAMENTO, 
CARACTERISTICASDOMINANTES.CD_A_EXPECT, CARACTERISTICASDOMINANTES.CD_A_REAL, CARACTERISTICASDOMINANTES.CD_B_EXPECT, CARACTERISTICASDOMINANTES.CD_B_REAL, 
CARACTERISTICASDOMINANTES.CD_C_EXPECT, CARACTERISTICASDOMINANTES.CD_C_REAL, CARACTERISTICASDOMINANTES.CD_D_EXPECT, CARACTERISTICASDOMINANTES.CD_D_REAL,
LIDERANCAORGANIZACIONAL.LO_A_EXPECT, LIDERANCAORGANIZACIONAL.LO_A_REAL,LIDERANCAORGANIZACIONAL.LO_B_EXPECT, LIDERANCAORGANIZACIONAL.LO_B_REAL,
LIDERANCAORGANIZACIONAL.LO_C_EXPECT, LIDERANCAORGANIZACIONAL.LO_C_REAL,LIDERANCAORGANIZACIONAL.LO_D_EXPECT, LIDERANCAORGANIZACIONAL.LO_D_REAL,
GESTAODEFUNCIONARIOS.GF_A_EXPECT, GESTAODEFUNCIONARIOS.GF_A_REAL, GESTAODEFUNCIONARIOS.GF_B_EXPECT, GESTAODEFUNCIONARIOS.GF_B_REAL,
GESTAODEFUNCIONARIOS.GF_C_EXPECT, GESTAODEFUNCIONARIOS.GF_C_REAL, GESTAODEFUNCIONARIOS.GF_D_EXPECT, GESTAODEFUNCIONARIOS.GF_D_REAL,
COLAGEMDEORGANIZACAO.CO_A_EXPECT, COLAGEMDEORGANIZACAO.CO_A_REAL, COLAGEMDEORGANIZACAO.CO_B_EXPECT, COLAGEMDEORGANIZACAO.CO_B_REAL,
COLAGEMDEORGANIZACAO.CO_C_EXPECT, COLAGEMDEORGANIZACAO.CO_C_REAL, COLAGEMDEORGANIZACAO.CO_D_EXPECT, COLAGEMDEORGANIZACAO.CO_D_REAL,
ENFASEESTRATEGICA.EE_A_EXPECT, ENFASEESTRATEGICA.EE_A_REAL, ENFASEESTRATEGICA.EE_B_REAL, ENFASEESTRATEGICA.EE_B_REAL,
ENFASEESTRATEGICA.EE_C_EXPECT, ENFASEESTRATEGICA.EE_C_REAL, ENFASEESTRATEGICA.EE_D_EXPECT, ENFASEESTRATEGICA.EE_D_REAL,
CRITERIOSDESUCESSO.CS_A_EXPECT, CRITERIOSDESUCESSO.CS_A_REAL, CRITERIOSDESUCESSO.CS_B_EXPECT, CRITERIOSDESUCESSO.CS_B_REAL,
CRITERIOSDESUCESSO.CS_C_EXPECT, CRITERIOSDESUCESSO.CS_C_REAL, CRITERIOSDESUCESSO.CS_D_EXPECT, CRITERIOSDESUCESSO.CS_D_REAL
FROM PESSOA
INNER JOIN CARACTERISTICASDOMINANTES 
ON PESSOA.PESSOAID = CARACTERISTICASDOMINANTES.CD_ID
INNER JOIN LIDERANCAORGANIZACIONAL
ON PESSOA.PESSOAID = LIDERANCAORGANIZACIONAL.LO_ID
INNER JOIN GESTAODEFUNCIONARIOS
ON PESSOA.PESSOAID = GESTAODEFUNCIONARIOS.GF_ID
INNER JOIN COLAGEMDEORGANIZACAO
ON PESSOA.PESSOAID = COLAGEMDEORGANIZACAO.CO_ID
INNER JOIN ENFASEESTRATEGICA
ON PESSOA.PESSOAID = ENFASEESTRATEGICA.EE_ID
INNER JOIN CRITERIOSDESUCESSO
ON PESSOA.PESSOAID = CRITERIOSDESUCESSO.CS_ID
ORDER BY CD_ID DESC;



/*Consulta que ser√° utilizada para retornar dados para Teyde*/
SELECT PESSOA.NOME, CARACTERISTICASDOMINANTES.CD_A_EXPECT, LIDERANCAORGANIZACIONAL.LO_A_EXPECT, GESTAODEFUNCIONARIOS.GF_A_EXPECT, COLAGEMDEORGANIZACAO.CO_A_EXPECT, ENFASEESTRATEGICA.EE_A_EXPECT, CRITERIOSDESUCESSO.CS_A_EXPECT
FROM PESSOA
INNER JOIN CARACTERISTICASDOMINANTES
ON PESSOA.PESSOAID = CARACTERISTICASDOMINANTES.CD_ID
INNER JOIN LIDERANCAORGANIZACIONAL
ON PESSOA.PESSOAID = LIDERANCAORGANIZACIONAL.LO_ID
INNER JOIN GESTAODEFUNCIONARIOS
ON PESSOA.PESSOAID = GESTAODEFUNCIONARIOS.GF_ID
INNER JOIN COLAGEMDEORGANIZACAO
ON PESSOA.PESSOAID = COLAGEMDEORGANIZACAO.CO_ID
INNER JOIN ENFASEESTRATEGICA
ON PESSOA.PESSOAID = ENFASEESTRATEGICA.EE_ID
INNER JOIN CRITERIOSDESUCESSO
ON PESSOA.PESSOAID = CRITERIOSDESUCESSO.CS_ID;

SENHA NOTEBOOK TEYDE = Paifi12345


